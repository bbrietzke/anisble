service {
    name    = "elasticsearch"
    id      = "elasticsearch-{{ ansible_hostname | lower }}"
    port    = "9200"
    tags    = ["elasticsearch", "static", "ansible"]

    meta    = {
        managed_by="ansible"
    }

    check {
        name        = "elasticsearch-check"
        interval    = "30s"
        timeout     = "2s"
        http        = "http://localhost:9200"
    }
}